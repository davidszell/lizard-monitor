{
  "name": "lizard-monitor",
  "version": "2.2.0",
  "description": "Lightweight web dashboard to monitor system resources.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "start:prod": "node server.js",

    "build": "npm run prebuild && webpack --config webpack.dev.js",
    "build:prod": "npm run prebuild && webpack --config webpack.dev.js",

    "prebuild": "npm run prebuild:clean && npm run prebuild:styles",
    "prebuild:clean": "rm -rf public && mkdir public",
    "prebuild:styles": "postcss ./src/tailwind.css -o ./public/css/app.css",

    "package": "./package.sh",

    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidszell/lizard-monitor.git"
  },
  "author": "David Szell",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/davidszell/lizard-monitor/issues"
  },
  "homepage": "https://github.com/davidszell/lizard-monitor#readme",
  "dependencies": {
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "preact": "^10.5.13",
    "pug": "^3.0.2",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.23.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.7",
    "postcss-cli": "^8.3.1",
    "prop-types": "^15.7.2",
    "source-map-loader": "^2.0.1",
    "tailwindcss": "^2.0.4",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3"
  },
  "plugins": [
    [
      "@babel/plugin-transform-react-jsx",
      {
        "pragma": "h",
        "pragmaFrag": "Fragment"
      }
    ]
  ]
}
